{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach for debugging Python",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 8001
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/opt/app/"
        }
      ],
      "justMyCode": true
    },
    {
      "name": "Launch Chrome and open localhost:5173",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ]
}
